.card.shadow-lg.rounded-lg.p-6
  .card-title.flex.justify-between
    %h2 S'enregistrer
  .card-body
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-inputs
        = f.input :username,
          required: false,
          input_html: { class: 'my-4' }

        = f.input :email,
          required: false,
          input_html: { autocomplete: "email", class: 'my-4' }

        = f.input :password,
          required: false,
          input_html: { autocomplete: "new-password", class: 'my-4' }

        = f.input :password_confirmation,
          required: false,
          input_html: { autocomplete: "new-password", class: 'my-4' }

      .form-actions
        = f.button :submit, "Enregistrer", class: 'btn btn-soft btn-primary'

    = render "devise/shared/links"
