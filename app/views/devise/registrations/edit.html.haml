.card.shadow-lg.rounded-lg.p-6
  .card-title.flex.justify-between
    %h2= "Modifier #{t('activerecord.models.user.one')}"
  .card-body
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f|
      .form-inputs
        = f.input :username,
          required: false,
          input_html: { class: 'my-4' }

        = f.input :email,
          required: false,
          input_html: { autocomplete: "email", class: 'my-4' }
        
        = f.input :current_password, require: false, input_html: { class: 'my-4' }

        -# = f.input :password,
        -#   required: false,
        -#   input_html: { class: 'my-4' }

        -# = f.input :password_confirmation,
        -#   required: false,
        -#   input_html: { class: 'my-4' }

      .form-actions.flex.justify-between.mt-4
        = link_to "Retour", :back, class: 'btn btn-secondary'
        = f.button :submit, "Enregistrer", class: 'btn btn-soft btn-primary'

